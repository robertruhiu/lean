<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">

    <h5>Candidates requirements</h5>
    {{#if username}}

    <div class="panel-body">
      <p>Username: {{username.local.username}}</p>

    </div>


{{else}}


    <p>Sign in and view your profile!</p>
    <p>
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        <span class="glyphicon glyphicon-user"></span>
        Sign in!
      </a>
    </p>

{{/if}}
</div>
        {{# if products }}
            <div class="row">
            {{# each products}}
                <div class="col-lg-4">
                    <div class="card cardno">
                        <div class="card-body">
                            <div class="text-center h5"><strong>Basic features</strong></div>
                            <ul>
                            <li class="h6">{{this.basic1}}</li>
                            <li class="h6">{{this.basic2}}</li>
                            <li class="h6">{{this.basic3}}</li>
                            <li class="h6">{{this.basic4}}
                            </li>
                        </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card cardno">
                        <div class="card-body">
                            <div class="text-center h5"><strong>Contraints</strong></div>
                            <ul>
                                <li class="h6">{{this.contraint1}}</li>
                                <li class="h6">{{this.contraint2}}</li>
                                <li class="h6">{{this.contraint3}}</li>
                                <li class="h6">{{this.contraint4}}</li>
                                <li class="h6">{{this.contraint5}}</li>
                                <li class="h6">{{this.contraint6}}</li>
                                <li class="h6">{{this.contraint7}}</li>
                                <li class="h6">{{this.contraint8}}</li>
                                <li class="h6">{{this.contraint9}}</li>
                                <li class="h6">{{this.contraint10}}</li>
                            </li>
                        </ul>
                        </div>
                    </div>
                </div>
                 <div class="col-lg-4">
                     <div class="card cardno">
                         <div class="card-body">
                             <div class="text-center h5"><strong>Advanced features</strong></div>
                             <ul>
                                 <li class="h6">{{this.advanced1}}</li>
                                 <li class="h6">{{this.advanced2}}</li>
                             </ul>
                             <div class="row" style="margin-top: 35%;">
                                 <div class="col-lg-12">
                                     <div class="d-flex justify-content-end">
                                         <a class="btn btn-primary" href="/custom" role="button">Previous</a>
                                         <a class="btn btn-primary" style="margin-left: 5%" href="/invites" role="button">Next</a>
                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </div>
            {{/each}}


        {{else}}
            <div class="row">
                <div class="col-sm-6 col-md-6">
                    <h2>No project choosen</h2>
                </div>
            </div>
        {{/if}}


