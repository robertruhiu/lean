<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">

    <h5>Which skill are you looking for?</h5>

    {{#if username}}

        <div class="panel-body">
            <p>Username: {{username.local.username}}</p>

        </div>


    {{else}}


        <p>Sign in and view your profile!</p>
        <p>
            <a href="/signin" class="btn btn-primary btn-lg" role="button">
                <span class="glyphicon glyphicon-user"></span>
                Sign in!
            </a>
        </p>

    {{/if}}

</div>
<div class="row">
    <div class="col-lg-3 ">
        <a href="/frontend">
            <div class="card card1 leo" style="background-color:#00BAD7">
                <div class="card-body">
                    <h5 class="card-title cardtitle1" style="color: white"> Frontend</h5>

                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 ">
        <a href="/backend">
            <div class="card card1 leo" style="background-color:#40CB88 ">
                <div class="card-body">
                    <h5 class="card-title cardtitle1" style="color: white"> Backend</h5>

                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 ">
        <a href="/fullstack">
            <div class="card card1 leo" style="background-color:#B080D6 ">
                <div class="card-body">
                    <h5 class="card-title cardtitle1" style="color: white"> Full stack</h5>

                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 ">
        <a href="/devops">
            <div class="card card1 leo" style="background-color:#7BD749 ">
                <div class="card-body">
                    <h5 class="card-title cardtitle1" style="color: white"> Devops</h5>

                </div>
            </div>
        </a>
    </div>


</div>
<hr>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
    <h5>Projects ongoing </h5><br>

</div>
<!--projects here-->

<div class="row">
    {{# if projects }}
    {{# each projects}}
        {{# each this.items}}


            <div class="col-lg-3">
                <a href="/project">
                    <div class="card ml ">
                        <div class="card-body">
                            <h5 class="card-title">{{this.item.projectname}}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Project type: {{this.item.type}}</h6>
                            <p class="card-text">Candidates: 20</p>
                        </div>
                    </div>
                </a>
            </div>




        {{/each}}
    {{/each}}
    {{else}}
        <div class="row ">
        <div class="col-lg-12">
            <div class="d-flex justify-content-center">
                <div class="alert alert-primary" role="alert" >
                Choose the developer you want above and explore their project library and choose some projects
            </div>
            </div>

        </div>

    </div>
    {{/if}}
</div>




