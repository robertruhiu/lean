<div class="container">
    <div class="row">
        <div class="col-lg-4" ></div>
        <div class="col-lg-4" style="margin-top: 6%">
            <div class="cardno great gr" >
            <div class="card-body">


                <div class="h4" >Your skills will be tested</div>
                <form action="/idelogin" method="post">
            <div class="form-group">

                {{#if hasErrors}}
                    <div class="alert alert-danger">
                        {{#each message}}
                            <p>{{this}}</p>

                        {{/each}}
                    </div>

                    {{/if}}

                <label>Access details</label>
                <input type="email" id="inputEmail" required autofocus class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Key</label>
                <input type="password" required class="form-control" name="password">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Access</button>
        </form>
                <hr>
                <p>Need more time? <a style="color: #2524FF" href="/candidate">Go back</a></p>



            </div>
            </div>


        </div>
    </div>


</div>